                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>

                            </Button.Template>



                        </Button>

                        <Button Style="{StaticResource UserLandButton}"  Command="{Binding DeleteStudentCommand}"  Width="200"  Margin="30 30 0 30" 
