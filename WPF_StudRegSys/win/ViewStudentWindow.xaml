        Background="Transparent"
        WindowStyle="None"
        
        ResizeMode="NoResize"
        Title="ViewStudentWindow" Height="450" Width="800">
    <Window.DataContext>
        <local1:ViewStudentWindowVM/>
    </Window.DataContext>
    <Border CornerRadius="20">

        <Border.Background>
            <ImageBrush Opacity="0.4" ImageSource="\images\adminbackground.jpg" />
        </Border.Background>
        <Border BorderThickness="3" CornerRadius="20"
               Opacity="0.8">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0 0">
                    <GradientStop Color="#b143cc" Offset="0"/>
                    <GradientStop Color="#1497FF" Offset="0.7"/>

                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background  >
                <LinearGradientBrush >
                    <GradientStop Color="#050634" Offset="0"/>
                    <GradientStop Color="#041742" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>

                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Student Information"
                           FontSize="10"
                           Foreground="DarkGray"
                           FontFamily="Monserrat"
                           VerticalAlignment="Center"
                           Margin="10 0 0 0"
                           Grid.Column="0"/>

                    <Button x:Name="minimize"
                        Grid.Column="1"
                        Grid.Row="0"
                        Content="-"
                        FontSize="15"
                        Margin="0 2 0 0"
                        Cursor="Hand"
                        Style="{StaticResource minimizeButton}"
                        Command="{Binding MinimizeCommand }"
                        />
                    <Button x:Name="closeb"
                        Grid.Column="2"
                        Grid.Row="0"
                        Content="X"
                        Style="{StaticResource closeButton}"
                        FontSize="15"
                        Margin="0 2 0 0"
                        Cursor="Hand"
                        Command="{Binding CloseCommand }"
                        />

                </Grid>

