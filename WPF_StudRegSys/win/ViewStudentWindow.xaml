                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>

                            </Button.Template>



                        </Button>
                        
                        <Button Style="{StaticResource UserLandButton}"  Command="{Binding EditStudentCommand}"  Width="250"  Margin="40 30 0 30" 
                                  FontWeight="Medium" FontSize="15  ">
                            <Button.Template>
                                <ControlTemplate>
